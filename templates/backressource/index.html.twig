{% extends 'back.html.twig' %}

{% block title %}Ressource index{% endblock %}

{% block body %}
    <br>
    <br>
    <br>
    <div class="container mt-4">
        <h1 style="color: #ff0000" class="m-0 text-center mb-4" style="font-size: 24px;">Liste des ressources</h1>
        <br>
        <div class="table-responsive">
            <table class="table table-striped">
                <thead class="thead-dark">
                <tr>
                    <th>Type de ressource</th>
                    <th>Espèce de ressource</th>
                    <th>Quantité de ressource</th>
                    <th>Actions</th>
                </tr>
                </thead>
                <tbody>
                {% for ressource in ressources %}
                    <tr>
                        <td style="color: #26ff00;">{{ ressource.typeres }}</td>
                        <td style="color: #26ff00;">{{ ressource.speciesres }}</td>
                        <td style="color: #26ff00;">{{ ressource.quantiteres }}</td>
                        <td>
                            <a href="{{ path('app_backressource_show', {'idres': ressource.idres}) }}" class="btn btn-info"><i class="fas fa-eye"></i></a>
                            <a href="{{ path('app_backressource_edit', {'idres': ressource.idres}) }}" class="btn btn-warning"><i class="fas fa-edit"></i></a>
                            <a href="{{ path('app_backressource_delete', {'idres': ressource.idres}) }}" class="btn btn-danger" onclick="return confirm('Are you sure you want to delete this resource?')"><i class="fas fa-trash"></i></a>
                        </td>
                    </tr>
                {% else %}
                    <tr>
                        <td colspan="4">No records found</td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>
        </div>
        <br>
        <div class="text-center">
            <a href="{{ path('app_backressource_new') }}" class="btn btn-success"><i class="fas fa-plus"></i>Ajouter ressource</a>
        </div>
    </div>
{% endblock %}
