{% extends 'adminTemplate.html.twig' %}

{% block title %}Parc{% endblock %}

{% block contenu %}
    <div class="container mt-4">
        <br>
        <br>
        <h1 class="m-0 text-center mb-4" style="font-size: 24px;">Informations sur le parc</h1>
        <br>
        <br>
        <div class="table-responsive">
            <table class="table table-bordered">
                <tbody>
                <tr>
                    <th class="bg-dark text-white" style="width: 30%;">Nom de parc</th>
                    <td>{{ parc.nomParc }}</td>
                </tr>
                <tr>
                    <th class="bg-dark text-white">Adresse de parc</th>
                    <td>{{ parc.adresseParc }}</td>
                </tr>
                <tr>
                    <th class="bg-dark text-white">Superficie de parc</th>
                    <td>{{ parc.superficieParc }}</td>
                </tr>
                </tbody>
            </table>
        </div>
        <br>
        
        <div class="text-center mt-4">
            <a href="{{ path('app_back_parc_index') }}" class="btn btn-primary mr-2">
                <i class="fas fa-arrow-left"></i> Retour à la liste
            </a>

            <a href="{{ path('app_parc_edit', {'idParc': parc.idParc}) }}" class="btn btn-warning mr-2">
                <i class="fas fa-edit"></i> Éditer
            </a>

            <form method="post" action="{{ path('app_back_parc_delete', {'idParc': parc.idparc}) }}" onsubmit="return confirm('Are you sure you want to delete this item?');" style="display: inline;">
                <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ parc.idparc) }}">
                <button type="submit" class="btn btn-danger">
                    <i class="fas fa-trash"></i> Supprimer
                </button>
            </form>
        </div>
    </div>
{% endblock %}
