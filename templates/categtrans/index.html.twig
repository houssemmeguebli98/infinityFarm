{% extends 'base.html.twig' %}
{% block head %}
    <meta charset="utf-8">
    <title>INFINITYFARM - Catégories</title>
    <meta content="width=device-width, initial-scale=1.0" name="viewport">
    <meta content="Free HTML Templates" name="keywords">
    <meta content="Free HTML Templates" name="description">
    {% endblock %}
{% block header %}
    <!-- Carousel Start --> 
    <div class="container-fluid p-0">
        <div id="header-carousel" class="carousel slide" data-ride="carousel">
            <div class="carousel-inner">
                <div class="carousel-item active">
                    <img class="w-100" src="{{ asset('img/farm-3.jpg') }}" alt="Image">
                    <div class="carousel-caption d-flex flex-column align-items-center justify-content-center">
                        <div class="p-3" style="max-width: 900px;">
                            <h1 class="display-3 text-white mb-md-4">Liste de catégories</h1>
                            <h4 class="text-white text-uppercase mb-md-3">de transaction</h4>
                        </div>
                    </div>
                </div>
                <div class="carousel-item">
                    <img class="w-100" src="{{ asset('img/farm-2.jpg') }}" alt="Image">
                    <div class="carousel-caption d-flex flex-column align-items-center justify-content-center">
                        <div class="p-3" style="max-width: 900px;">
                            <h1 class="display-3 text-white mb-md-4">Liste de catégories</h1>
                            <h4 class="text-white text-uppercase mb-md-3">de transaction</h4>
                            
                        </div>
                    </div>
                </div>
            </div>
            <a class="carousel-control-prev" href="#header-carousel" data-slide="prev">
                <div class="btn btn-dark" style="width: 45px; height: 45px;">
                    <span class="carousel-control-prev-icon mb-n2"></span>
                </div>
            </a>
            <a class="carousel-control-next" href="#header-carousel" data-slide="next">
                <div class="btn btn-dark" style="width: 45px; height: 45px;">
                    <span class="carousel-control-next-icon mb-n2"></span>
                </div>
            </a>
        </div>
    </div>
     <!--Carousel End -->
{% endblock %}
{% block title %}Categtrans index{% endblock %}

{% block body %}
<br>
<br>
<br>
    <div style="margin: 20px;">
        <h1 style="color: #8FB31D;">Les catégories de transactions</h1>
        <br>
        <table class="table" style="border-collapse: collapse; width: 100%; margin-bottom: 20px;">
            <thead>
                <tr style="background-color: #3D3635; color: white;">
                    <th>IdCatTra</th>
                    <th>NomCatTra</th>
                    <th>DescripCatTra</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
            {% for categtran in categtrans %}
                <tr style="border-bottom: 1px solid #ddd;">
                    <td>{{ categtran.idCatTra }}</td>
                    <td>{{ categtran.nomCatTra }}</td>
                    <td>{{ categtran.descripCatTra }}</td>
                    <td>
                        <button style="background-color: #4863A0; color: white; border: none; border-radius: 5px; padding: 8px 12px; margin-right: 5px;" onclick="window.location.href='{{ path('app_categtrans_show', {'idCatTra': categtran.idCatTra}) }}'">Afficher</button>
                        <button style="background-color: #CB6D51; color: white; border: none; border-radius: 5px; padding: 8px 12px;" onclick="window.location.href='{{ path('app_categtrans_edit', {'idCatTra': categtran.idCatTra}) }}'">Modifier</button>
                    </td>
                </tr>
            {% else %}
                <tr>
                    <td colspan="4" style="text-align: center;">Aucun enregistrement trouvé.</td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
        
        <button style="background-color: #8FB31D; color: white; border: none; border-radius: 5px; padding: 10px 15px;" onclick="window.location.href='{{ path('app_categtrans_new') }}'">Ajouter</button>
    </div>
{% endblock %}