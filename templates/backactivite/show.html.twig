{% extends 'back.html.twig' %}

{% block title %}Activité{% endblock %}

{% block body %}
    <div class="container mt-4">
        <br>
        <br>
        <h1 style="color: #ff0000" class="m-0 text-center mb-4" style="font-size: 24px;">Informations sur l'activité</h1>
        <br>
        <br>
        <div class="table-responsive">
            <table class="table table-bordered">
                <tbody>
                <tr>
                    <th class="bg-dark text-white" style="width: 30%;">Objet de l'activité</th>
                    <td style="color: #26ff00;">{{ activite.objetact }}</td>
                </tr>
                <tr>
                    <th class="bg-dark text-white">Description de l'activité</th>
                    <td style="color: #26ff00;">{{ activite.descriptionact }}</td>
                </tr>
                <tr>
                    <th class="bg-dark text-white">Distance de l'activité</th>
                    <td style="color: #26ff00;">{{ activite.distact }}</td>
                </tr>
                <tr>
                    <th class="bg-dark text-white">Email du distributeur</th>
                    <td style="color: #26ff00;">{{ activite.emaildist }}</td>
                </tr>
                <tr>
                    <th class="bg-dark text-white">Espèce de ressource</th>
                    <td style="color: #26ff00;">{{ activite.speciesres }}</td>
                </tr>
                <tr>
                    <th class="bg-dark text-white">État de l'activité</th>
                    <td style="color: #26ff00;">{{ activite.etatact }}</td>
                </tr>
                </tbody>
            </table>
        </div>
        <br>

        <div class="text-center mt-4">
            <a href="{{ path('app_backactivite_index') }}" class="btn btn-primary mr-2">
                <i class="fas fa-arrow-left"></i> Retour à la liste
            </a>

            <a href="{{ path('app_backactivite_edit', {'idact': activite.idact}) }}" class="btn btn-warning mr-2">
                <i class="fas fa-edit"></i> Éditer
            </a>

            <form method="post" action="{{ path('app_backactivite_delete', {'idact': activite.idact}) }}" onsubmit="return confirm('Are you sure you want to delete this item?');" style="display: inline;">
                <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ activite.idact) }}">
                <button type="submit" class="btn btn-danger">
                    <i class="fas fa-trash"></i> Supprimer
                </button>
            </form>
        </div>
    </div>
{% endblock %}
