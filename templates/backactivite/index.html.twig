{% extends 'back.html.twig' %}

{% block title %}Activité index{% endblock %}

{% block body %}
    <br>
    <br>
    <br>
    <div class="container mt-4">
        <h1 style="color: #ff0000" class="m-0 text-center mb-4" style="font-size: 24px;">Liste des activités</h1>
        <br>
        <div class="table-responsive">
            <table class="table table-striped">
                <thead class="thead-dark">
                <tr>
                    <th>Objet de l'activité</th>
                    <th>Description de l'activité</th>
                    <th>Distance de l'activité</th>
                    <th>Email du distributeur</th>
                    <th>Espèce de ressource</th>
                    <th>État de l'activité</th>
                    <th>Actions</th>
                </tr>
                </thead>
                <tbody>
                {% for activite in activites %}
                    <tr>
                        <td style="color: #26ff00;">{{ activite.objetact }}</td>
                        <td style="color: #26ff00;">{{ activite.descriptionact }}</td>
                        <td style="color: #26ff00;">{{ activite.distact }}</td>
                        <td style="color: #26ff00;">{{ activite.emaildist }}</td>
                        <td style="color: #26ff00;">{{ activite.speciesres }}</td>
                        <td style="color: #26ff00;">{{ activite.etatact }}</td>
                        <td>
                            <div class="btn-group" role="group">
                                <a href="{{ path('app_backactivite_show', {'idact': activite.idact}) }}" class="btn btn-info"><i class="fas fa-eye"></i></a>
                                <a href="{{ path('app_backactivite_edit', {'idact': activite.idact}) }}" class="btn btn-warning"><i class="fas fa-edit"></i></a>
                                <a href="{{ path('app_backactivite_delete', {'idact': activite.idact}) }}" class="btn btn-danger" onclick="return confirm('Are you sure you want to delete this activity?')"><i class="fas fa-trash"></i></a>
                            </div>
                        </td>
                    </tr>
                {% else %}
                    <tr>
                        <td colspan="7">No activities found</td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>
        </div>
        <br>
        <div class="text-center">
            <a href="{{ path('app_backactivite_new') }}" class="btn btn-success"> <i class="fas fa-plus"></i>Ajouter activite</a>
        </div>
    </div>
{% endblock %}
