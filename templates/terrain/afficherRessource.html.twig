{% extends 'base.html.twig' %}

{% block title %}Ressources associées{% endblock %}

{% block content %}
    <br>
    <br>
    <div class="container mt-4">
        <h1 class="text-center mb-4" style="font-size: 24px;">Ressources associées </h1>
        <br>

        {% if ressources is not empty %}
            <table class="table table-bordered">
                <thead class="thead-dark">
                <tr>
                    <th>Type de Ressource</th>
                    <th>Species de Ressource</th>
                    <th>Quantité de Ressource</th>
                    <!-- Add other columns if necessary -->
                </tr>
                </thead>
                <tbody>
                {% for ressource in ressources %}
                    <tr>
                        <td>{{ ressource.typeres }}</td>
                        <td>{{ ressource.speciesres }}</td>
                        <td>{{ ressource.quantiteres }}</td>
                        <!-- Add other columns if necessary -->
                    </tr>
                {% endfor %}
                </tbody>
            </table>
        {% else %}
            <div class="alert alert-danger text-center" role="alert">
                <strong>Aucune ressource associée trouvée</strong>
            </div>
        {% endif %}

        <br>
        <div class="text-center mt-4">
            <a href="{{ path('app_terrain_index') }}" class="btn btn-primary">
                <i class="fas fa-arrow-left"></i> Retour à la liste des terrains
            </a>
        </div>
    </div>
{% endblock %}
