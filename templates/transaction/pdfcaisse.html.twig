{# templates/pdf/template.html.twig #}
<!DOCTYPE html>
<html>
<head>
    <meta charset="UTF-8">
    <title>Transaction PDF</title>
</head>
<body>
    <h1>Transaction Data</h1>
    <table border="1">
        <thead>
            <tr>
                <th>ID</th>
                <th>Category</th>
                <th>Type</th>
                <th>Date</th>
                <th>Montant</th>
            </tr>
        </thead>
        <tbody>
            {% for transaction in transactions %}
                <tr>
                    <td>{{ transaction.idTra }}</td>
                    <td>{{ transaction.categTra }}</td>
                    <td>{{ transaction.typeTra }}</td>
                    <td>{{ transaction.dateTra|date('Y-m-d') }}</td>
                    <td>{{ transaction.montant }}</td>
                </tr>
            {% endfor %}
        </tbody>
    </table>
</body>
</html>
