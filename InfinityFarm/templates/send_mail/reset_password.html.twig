{# templates/send_mail/reset_password.html.twig #}

{% extends 'base.html.twig' %}

{% block title %}Reset Password{% endblock %}

{% block body %}
    <div class="container">
        <h1>Reset Password</h1>

        {% if errors is defined and errors is not empty %}
         <div class="alert alert-danger">
            <ul>
                {% for fieldName, errorMessage in errors %}
                    <li>{{ errorMessage }}</li>
                {% endfor %}
            </ul>
          </div>
        {% endif %}

        {# Formulaire pour la réinitialisation du mot de passe #}
        <form action="{{ path('process_reset_password') }}" method="post">
            <input type="hidden" name="email" value="{{ email }}">
            
            {# Champ du nouveau mot de passe #}
            <label for="new_password">New Password:</label>
            <input type="password" id="new_password" name="new_password" required>
            
            {# Afficher le message d'erreur associé au champ du nouveau mot de passe #}
            {% if errors['new_password'] is defined %}
                <div class="alert alert-danger">{{ errors['new_password'] }}</div>
            {% endif %}

            <button type="submit">Reset Password</button>
        </form>
    </div>
{% endblock %}
